<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="com.sap.build.standard.hackathon2018.controller.Planning" xmlns="sap.m"
	xmlns:commons="sap.suite.ui.commons" xmlns:core="sap.ui.core">
	<Page showHeader="true" title="Planning" showFooter="true" showNavButton="true" navButtonPress="_onPageNavButtonPress">
        <content>
            <commons:Timeline alignment="Left" enableDoubleSided="true" axisOrientation="Vertical" width="100%" height="100%" enableBusyIndicator="true" enableScroll="false" forceGrowing="false" groupBy="" growingThreshold="5" showHeaderBar="false" showIcons="true" showSearch="true" sort="true" sortOldestFirst="false" content="{/DatumSet}">
                <commons:content>
                    <commons:TimelineItem dateTime="" text="" userName="" userPicture="" title="" icon="sap-icon://notes" filterValue="Filter Value" userNameClickable="false" replyCount="0" maxCharacters="0">
                        <commons:embeddedControl>
                            <VBox alignItems="Stretch" direction="Column" fitContainer="false" width="auto" height="auto" justifyContent="Start" renderType="Div" visible="true" displayInline="false" templateShareable="false">
                                <items>
                                    <Text text="{path: 'Date', type: 'sap.ui.model.type.Date', formatOptions: { UTC: true, style: 'short' }}" width="65px" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
