                                    </ComboBox>
                                    <HBox alignItems="Stretch" direction="Row" fitContainer="true" width="90.00000000px" justifyContent="Start" renderType="Div" visible="true" displayInline="false" templateShareable="false">
                                        <items>
                                            <Text text="# passengers" width="170.00000000px" maxLines="1" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
                                            <ComboBox editable="true" enabled="true" visible="true" width="75px" valueState="None" maxWidth="100%" items="{/PersonsSet}" templateShareable="false">
                                                <items>
                                                    <core:Item text="{Quantity_persons}" enabled="true" key="{Quantity_persons}"/>
                                                </items>
                                            </ComboBox>
                                        </items>
                                        <layoutData/>
                                    </HBox>
                                </items>
                                <layoutData/>
                            </VBox>
                        </commons:embeddedControl>
                    </commons:TimelineItem>
                </commons:content>
                <commons:filterList/>
            </commons:Timeline>
        </content>
        <footer/>
        <headerContent/>
        <subHeader/>
        <customHeader/>
    </Page>
</mvc:View>